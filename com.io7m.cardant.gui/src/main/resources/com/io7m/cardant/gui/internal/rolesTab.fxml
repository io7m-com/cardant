<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="480.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.io7m.cardant.gui.internal.CAViewControllerRolesTab">
   <children>
      <VBox prefWidth="320.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox>
               <children>
                  <TextField fx:id="uuidForOwner" editable="false" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="32.0" styleClass="dataField" HBox.hgrow="ALWAYS" />
                  <Button fx:id="rolesRefreshOwner" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onRefresh" prefHeight="32.0" prefWidth="32.0">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                           <image>
                              <Image url="@role-refresh.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="%roles.tooltip.refresh" />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
            <ListView fx:id="rolesForOwner" prefHeight="200.0" prefWidth="200.0" styleClass="roleTable" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <Region maxWidth="-Infinity" minWidth="-Infinity" prefWidth="16.0" />
      <VBox prefWidth="320.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox>
               <children>
                  <TextField fx:id="uuidForTarget" maxHeight="-Infinity" minHeight="-Infinity" onAction="#onTargetChanged" onKeyReleased="#onTargetChanged" prefHeight="32.0" promptText="%roles.targetPrompt" styleClass="dataField" HBox.hgrow="ALWAYS" />
                  <Button fx:id="rolesRefreshTarget" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onRefresh" prefHeight="32.0" prefWidth="32.0">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                           <image>
                              <Image url="@role-refresh.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="%roles.tooltip.refresh" />
                     </tooltip>
                  </Button>
                  <Button fx:id="rolesRemove" layoutX="298.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onRolesRemove" prefHeight="32.0" prefWidth="32.0">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                           <image>
                              <Image url="@role-remove.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="%roles.tooltip.remove" />
                     </tooltip>
                  </Button>
                  <Button fx:id="rolesAdd" layoutX="311.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onRolesAdd" prefHeight="32.0" prefWidth="32.0">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" smooth="false">
                           <image>
                              <Image url="@role-add.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <tooltip>
                        <Tooltip text="%roles.tooltip.add" />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
            <ListView fx:id="rolesForTarget" styleClass="roleTable" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</HBox>
